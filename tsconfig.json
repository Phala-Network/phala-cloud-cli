{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": "src",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
